<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/deep_black"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/questTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quests"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/blue_accent" />

    <!-- Quest Selector Section -->
    <LinearLayout
        android:id="@+id/questSelectorSection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quest Type: "
            android:textColor="@color/electric_blue"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>
        <Spinner
            android:id="@+id/questTypeSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/quest_types"/>
    </LinearLayout>

    <TextView
        android:id="@+id/questList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Daily/Weekly Quests will appear here."
        android:textColor="@color/text_on_dark"
        android:textSize="18sp"
        android:background="@color/dark_card"
        android:padding="16dp"
        android:radius="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp" />

</LinearLayout>
