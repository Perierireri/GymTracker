<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Modern Card for Template Editor -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/dark_card"
            app:cardCornerRadius="16dp"
            android:elevation="6dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <!-- Change day selector background to navy blue -->
                <LinearLayout
                    android:id="@+id/daySelectorRow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"
                    android:background="@color/navy_blue">
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/prevDayBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_arrow_left_gray"
                        android:text=""
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@android:color/transparent"
                        app:iconTint="@color/text_secondary"/>
                    <TextView
                        android:id="@+id/currentDayLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:textColor="@color/electric_blue"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/nextDayBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:icon="@drawable/ic_arrow_right_gray"
                        android:text=""
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:backgroundTint="@android:color/transparent"
                        app:iconTint="@color/text_secondary"/>
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Exercises for selected day:"
                    android:textColor="@color/electric_blue"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/exerciseList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/addExerciseBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ADD EXERCISE"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_marginBottom="8dp"/>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/saveTemplateBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SAVE TEMPLATE"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_marginBottom="16dp"/>
                <!-- Simple Rest Timer Section -->
                <LinearLayout
                    android:id="@+id/restTimerSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">
                    <TextView
                        android:id="@+id/restTimerLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rest Timer: 00:00"
                        android:textColor="@color/electric_blue"
                        android:textSize="16sp"
                        android:layout_marginEnd="12dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/restTimerStartBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="START"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginEnd="8dp"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/restTimerStopBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="STOP"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"/>
                </LinearLayout>
                <!-- Workout Logger Section -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/text_secondary"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log Workout for this day:"
                    android:textColor="@color/electric_blue"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:id="@+id/loggerSection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <EditText
                        android:id="@+id/loggerExerciseInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Exercise name (e.g. Bench Press)"
                        android:inputType="text"/>
                    <EditText
                        android:id="@+id/loggerWeightInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Weight (kg or meters for run)"
                        android:inputType="number"/>
                    <EditText
                        android:id="@+id/loggerRepsInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Reps (or meters for run)"
                        android:inputType="number"/>
                    <Spinner
                        android:id="@+id/loggerStatSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:entries="@array/stat_types"/>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loggerAddSetBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADD SET"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_marginTop="8dp"/>
                    <LinearLayout
                        android:id="@+id/loggerSetList"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="8dp"/>
                    <!-- Compact Workout Timer Section -->
                    <LinearLayout
                        android:id="@+id/workoutTimerSection"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp">
                        <TextView
                            android:id="@+id/workoutTimerLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="00:00"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:textColor="@color/electric_blue"
                            android:layout_marginEnd="10dp" />
                        <Button
                            android:id="@+id/startWorkoutTimerBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Start"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp" />
                        <Button
                            android:id="@+id/stopWorkoutTimerBtn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stop"
                            android:textSize="12sp"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_marginStart="6dp" />
                    </LinearLayout>
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/loggerSaveWorkoutBtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LOG WORKOUT"
                        android:layout_marginTop="8dp"/>
                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Workout Log"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/electric_blue"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="8dp"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/workoutLogRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:overScrollMode="never"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
